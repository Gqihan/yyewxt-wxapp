/* 标题区域 */
.medicine .content .title {
  height: 80px;
  background-color: #4087FD;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
}

/* 聊天内容区域 */
.medicine .content .chat-content {
  height: calc(100vh - 210px); /* 调整高度以显示输入区域和热门问题 */
  overflow-y: auto;
}

/* 消息样式 */
.medicine .content .chat-content .message {
  display: flex;
  align-items: center;
  margin: 10px;
}

/* 机器人消息 */
.medicine .content .chat-content .message.robot {
  justify-content: flex-start;
}

/* 用户消息 */

/* 头像样式 */
.medicine .content .chat-content .message .avatar {
  margin: 0 10px;
  width: 40px;
  height: 40px;
  
}

.medicine .content .chat-content .message.me .avatar {
  margin-left: 10px;
}

.medicine .content .chat-content .message .avatar-left {
  border-radius: 50%;
}



/* 头像图片样式 */
.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 消息文本样式 */
.medicine .content .chat-content .message .text {
  max-width: 60%;
  padding: 10px;
  background-color: #39affe;
  color: white;
  border-radius: 5px;
  word-break: break-all;
}

/* 热门问题区域 */
.medicine .content .hotItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px 0; /* 缩小热门问题区域的上下间距 */
}

.medicine .content .hotItem .hot-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.medicine .content .hotItem .hot-button {
  margin: 5px;
  padding: 5px 10px;
  font-size: 12px;
  min-width: 80px; /* 缩小按钮大小 */
}

/* 输入区域 */
.medicine .content .inputArea {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px; /* 调整内边距 */
  background-color: #f5f5f5;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.medicine .content .inputArea .input {
  flex: 1;
  padding: 5px; /* 调整内边距 */
  margin-right: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  height: 26px; /* 调整高度 */
}

.medicine .content .inputArea .inputButton {
  padding: 5px 10px; /* 调整按钮内边距 */
  border: none;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
  font-size: 14px; /* 调整按钮字体大小 */
  width: 50px; /* 调整按钮宽度 */
  height: 30px; /* 调整按钮高度 */
}
