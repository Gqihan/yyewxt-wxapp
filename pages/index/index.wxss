/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  position: relative;
  height: 100vh; /* 设置容器高度 */
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* 将内容放置在容器底部 */
  align-items: center; /* 内容水平居中 */
  padding-bottom: 20px; /* 底部内边距 */
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 使背景图片在文字后面 */
}

.line {
  color: white; /* 设置文字颜色 */
  font-size: 20px; /* 设置文字大小 */
  margin: 10px 0; /* 设置上下外边距 */
}

