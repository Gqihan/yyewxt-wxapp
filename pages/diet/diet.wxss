.diet {
  color: #333;
  background: #001f3f; /* 背景颜色 */
  min-height: 100vh;
  padding: 10px; /* 增加页面内边距 */
  box-sizing: border-box; /* 包括内边距在内的盒模型 */
}

.header {
  font-size: 24px;
  color: #fff; /* 标题颜色 */
  text-align: center;
  margin-bottom: 20px;
}

.search-bar {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.search-bar input {
  width: 60%;
  padding: 10px;
  border-radius: 5px;
  border: none;
}

.search-bar button {
  padding: 10px 20px;
  margin-left: 10px;
  border: none;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
}

.recommendations {
  display: flex;
  position: relative;
  overflow: hidden;
  max-width: 100%;
  height: 200px;
}

.recommendation {
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  cursor: pointer;
  position: relative;
  text-align: center;
}

.recommendation-image {
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  padding: 10px 0;
}

.recommendation-title {
  position: absolute;
  bottom: 10px;
  left: 0;
  width: 100%;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  padding: 10px 0;
  text-align: center;
  white-space: normal;
}

.arrow {
  position: absolute;
  top: 80%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.7);
  border: none;
  font-size: 24px;
  cursor: pointer;
  z-index: 1;
}

.arrow.left {
  left: 0;
}

.arrow.right {
  right: 0;
}

.pagination-dots {
  text-align: center;
  margin-top: 10px;
}

.dot {
  display: inline-block;
  width: 10px;
  height: 10px;
  margin: 0 5px;
  background-color: #ccc;
  border-radius: 50%;
  cursor: pointer;
}

.dot.active {
  background-color: #333;
}

.recipes {
  margin-top: 20px;
}

.recipe-buttons {
  display: flex;
  justify-content: space-around;
}

.recipe-buttons button {
  padding: 10px 20px;
  border: none;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
  cursor: pointer;
}

.recipe {
  margin-top: 10px;
  border: 1px solid #ccc;
  padding: 10px;
}

.recipe text {
  display: block;
  margin-bottom: 10px;
}

.recipe video {
  width: 100%;
  height: auto;
}

.daily-quiz {
  margin-top: 20px;
}

.daily-quiz text {
  display: block;
  margin-bottom: 10px;
}

.daily-quiz button {
  padding: 10px 20px;
  border: none;
  background-color: #007bff;
  color: white;
  border-radius: 5px;
  margin-top: 10px;
}

.community {
  margin-top: 20px;
}

.community-post {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
}

.new-post {
  margin-top: 20px;
}

.new-post textarea {
  width: 100%;
  height: 100px;
  padding: 10px;
  border: 1px solid #ccc;
}

.tip-popup {
  position: fixed;
  top: 20px;
  right: 20px;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 20px;
  border-radius: 10px;
  z-index: 1000;
}

.tip-popup .tip-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip-popup button {
  margin-top: 10px;
  padding: 5px 10px;
  background: #fff;
  color: #000;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
