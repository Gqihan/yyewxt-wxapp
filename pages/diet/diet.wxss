/* 定义整体滚动视图的样式 */
.diet {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 30rpx;
  text-align: center;
  color: #ffffff; /* 设置文字颜色为白色 */
  font-weight: bold; /* 设置文字加粗 */
}

.recommendations {
  height: 400rpx; /* 设置适当的高度 */
  position: relative;
}

.recommendation {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recommendation-image {
  width: 100%;
  height: 350rpx;
}

.recommendation-title {
  position: absolute; /* 绝对定位 */
  bottom: 10rpx; /* 距离底部一定距离 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 水平居中调整 */
  font-size: 28rpx;
  margin: 0; /* 去除默认的 margin */
  background-color: rgba(255, 255, 255, 0.7); /* 透明白色背景 */
  padding: 5rpx 10rpx; /* 添加一些内边距 */
  border-radius: 5rpx; /* 圆角 */
  text-align: center; /* 文本居中 */
}

.arrow {
  position: absolute;
  top: 80%;
  width: 50rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border: none;
  text-align: center;
  line-height: 50rpx;
  cursor: pointer;
}

.arrow.left {
  left: 10rpx;
}

.arrow.right {
  right: 10rpx;
}

.recipe-buttons {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.recipe-buttons button {
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.recipes, .daily-quiz, .community, .tip-popup {
  padding: 20rpx;
}

.recipe {
  margin-top: 20rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
}

.recipe-description {
  font-size: 28rpx;
  margin: 10rpx 0;
}

.sub-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
}

.daily-quiz text, .community-post text, .new-post textarea {
  font-size: 28rpx;
}
.community-post {
  border: 2px solid rgb(19, 76, 141); /* 添加边框 */
  border-radius: 10rpx; /* 圆角边框 */
  padding: 10rpx; /* 内边距 */
  margin-bottom: 20rpx; /* 间距 */
  background-color: #95bcdb; /* 背景色 */
}
.tip-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  z-index: 1000;
  width: 500rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 0px solid #ddd;
}

.tip-content text {
  font-size: 33rpx;
  margin-bottom: 20rpx;
}

button {
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 10rpx;
  text-align: center;
  border-radius: 10rpx;
}
